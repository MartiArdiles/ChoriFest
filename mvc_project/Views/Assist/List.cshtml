}

<div class="row">
    <table width="100%" 
            class="table" 
            id="ListAssist" 
            style="table-layout: fixed; word-break: break-word !important;">
        <thead class="thead-default">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


<script>
    $(document).ready(function () {
        var columns = [{
            "data": "id",
            "name": "Id",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "nombre",
            "name": "Nombre",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "email",
            "name": "Email",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "telefono",
            "name": "Telefono",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            data: function (row, type, set) {
                var s = '';
                s += 
                    `<button 
                        title='Editar' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick=''
                        style=''> 
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Ver' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick=''
                        style='margin-left:2px;'>  
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>`;
                
                s += 
                    `<button 
                        title='Ver' 
                        type='button' 
                        class='btn btn-sm btn-primary' 
                        onclick=''
                        style='margin-left:2px;'>
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>`;
                
                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        style='margin-left:2px;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-pencil">
                                </use>
                            </svg>
                    </button>`;
                
                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        style='margin-left:2px;background-color:red;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-pencil">
                                </use>
                            </svg>
                    </button>`;

                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        style='margin-left:2px;background-color:green;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-pencil">
                                </use>
                            </svg>
                    </button>`;

                return s;
            },
            "searchable": false,
            "orderable": false,
            "visible": true,
            defaultContent: ""
        }];
        
        createGrid(
            'ListAssist', 
            'Assist/ListAssist', 
            'ejemplos', 
            columns, 
            null, 
            true);
    });
</script>