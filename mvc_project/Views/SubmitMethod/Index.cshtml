@model mvc_project.Models.ComponentUse.TestSubmitModel
@{
    ViewData["Title"] = "Submit method";
}

<form action='@Url.Content("~/SubmitMethod/Submit")' method="post">
    <input type="hidden" value="@Model.id" name="id">
    <input name="name" type="text" value="@Model.name" placeholder="Ingrese su nombre" class="form-control">
    <br><br>
    <input name="surname" type="text" value="@Model.surname" placeholder="Ingrese su apellido" class="form-control">
    <br><br>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
